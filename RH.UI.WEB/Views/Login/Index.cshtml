@model Login;
@{

    Layout = "_LayoutLogin";
}
<input id="LoginModal" value="@ViewBag.Message" type="hidden">
<div class="container">
    <div class="forms-container">
        <div class="signin-signup">
            <form method="post" enctype="multipart/form-data" asp-controller="Login" asp-action="Logar" class="sign-in-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="operacao" value="LOGIN">
                <h2 class="title">Entrar</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" name="nome" placeholder="Cpf ou Email" />
                
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="senha" placeholder="Senha" />
                </div>
                <input type="submit" value="Acessar" class="btn solid" />
            </form>
            <form asp-controller="Login" asp-action="Registrar" class="sign-up-form" method="post">
                <input type="hidden" name="operacao" value="CADASTRO">
                <h2 class="title">Cadastrar-se</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" name="cpf" placeholder="CPF" />
                </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
                <div class="input-field">
                    <i class="fas fa-user"></i>
                   <input type="text" name="nome" placeholder="Nome" />
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input type="email" asp-for="email" placeholder="Email" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="senha"  placeholder="Senha" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="ConfirmarSenha" placeholder="Confirmar Senha" />
                </div>
                <input type="submit" class="btn" value="Cadastrar-se" />
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>É novo por aqui ?</h3>
                <p>
                    Com apenas um clique você pode se juntar a uma das plataformas mais completas
                    quando o assunto é recrutamento e seleção de pessoas!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Criar uma Conta
                </button>
            </div>
            <img src="img/log.svg" class="image" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Já possui uma conta ?</h3>
                <p>
                    Se você já possui cadastro em nosso sistema clique no botão abaixo para acessar a sua conta!
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Acessar
                </button>
            </div>
            <img src="img/register.svg" class="image" alt="" />
        </div>
    </div>
</div>

      