@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{

    string nomeUsuario = HttpContextAccessor.HttpContext.User.Claims.First(c => c.Type == System.Security.Claims.ClaimTypes.Name).Value;

}
<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/estiloNavBar.css">
    <script src="~/js/alertas.js"></script>
    <link rel="stylesheet" href="lib/virtualselect/virtual-select.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-light nav-fundo" style="background: #EFEFFF;">
        <div class="div-nav-left">
            <div class="div-nav-icon" href="#">
                <img class="nav-icon" src="../img/logo.png" width="35" height="35" alt="">
            </div>
            <div class="div-nav-text">
                <p>Ficha de Solicitação de emprego</p>
            </div>
        </div>


        <div class="nav-item dropdown div-nav-user">
            <img src="../img/user.png" width="32" height="32" alt="" id="navDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span>@nomeUsuario</span>
            <img class="div-nav-seta" src="../img/seta.png" width="24" height="24" alt="" id="navDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">

            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Login/Sair">Sair</a></li>
            </ul>
        </div>
    </nav>
    @RenderBody()

    <div id="fundo-carregando" class="d-none">
        <div class="spinner-border text-light" role="status">
            <span class="sr-only">Carregando...</span>
            @*
                <p class='text-center'>
                    <img src='~/Content/Image/carregando.gif' alt='Carregando...' /><br />
                    Carregando, aguarde um momento.
                </p>*@
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>





</body>
</html>
